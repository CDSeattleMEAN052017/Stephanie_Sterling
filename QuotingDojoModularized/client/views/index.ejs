<html>
    <head>
       <title>Quoting Dojo</title>
    </head>
    <body>
      <% if(typeof(errors) != 'undefined' ) { %>
          <% for (var x in errors) { %>
           <h3><%= errors[x].message %></h3>
          <% } %>
      <% } %>
      <h1>Welcome to quoting dojo</h1>
      <form action='/quotes' method='post'>
          Your Name: <input type='text' name='name'>
          Your Quote: <textarea name="quote" rows="8" cols="80"></textarea>
          <input type='submit' value='Add my quote!'>
      </form>
      <form action='/quotes'>
          <input type='submit' value='Skip to quotes!'>
      </form>
    </body>
</html>
